@using Interfaces
@model Patient
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<!DOCTYPE html>
<html>
    <body>
        <div class="form-group">
            <label>ФИО</label>
            @Html.TextBoxFor(x=>x.Name)
        </div>
        <div class="form-group">
            <label>Номер истории болезни</label>
            @Html.TextBoxFor(x=>x.MedicalHistoryNumber)
        </div>
        <div class="form-group">
            <label>Дата рождения</label>
            @Html.EditorFor(x=>x.Birthday)
        </div>
        <div class="form-group">
            <label>Пол</label>
            @Html.DropDownListFor(x=>x.Gender, Html.GetEnumSelectList(typeof(GenderEnum)))
        </div>
    </body>
</html>
