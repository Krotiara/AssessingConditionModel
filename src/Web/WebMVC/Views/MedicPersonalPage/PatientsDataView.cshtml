<html>
    <head>
        <style>
            th {
                text-align: center;
                font-weight: normal;
            }
        </style>
        <style>
            /* Page content */
             /* Same as the width of the sidenav */
            /*.main {
              margin-left: 200px;
            }*/
            .sidenav {
                  height: 100%;
                  width: 0;
                  position: fixed;
                  z-index: 1;
                  top: 0;
                  left: 0;
                  background-color: #111;
                  overflow-x: hidden;
                  transition: 0.5s;
                  padding-top: 60px;
            }
            .sidenav a {
                padding: 8px 8px 8px 32px;
                text-decoration: none;
                font-size: 25px;
                color: #818181;
                display: block;
                transition: 0.3s;
            }
            .sidenav button{
                background-color: transparent;
                border: none;
                font-size: 25px;
                color: #818181;
                display: block;
                transition: 0.3s;
                text-decoration: none;
            }
            .sidenav a:hover {
                color: #f1f1f1;
            }

            .sidenav .closebtn {
              position: absolute;
              top: 0;
              right: 25px;
              font-size: 36px;
              margin-left: 50px;
            }
        </style>
    </head>
    <body>
        <div id="mySidenav" class="sidenav">
          <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
          <button onclick="GetPanel('search')">Пациенты</button>
          <button onclick="GetPanel('add')">Добавить пациента</button>
        </div>
        <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; меню</span>
    <div id="Content"></div>
    </body>
</html>

<script>
    function GetPanel(panelName) {
        $.ajax({
            url: '@Url.Action("GetPartialViewByTag", "Medic")',
            data: { tag: panelName },
            type: 'get',
            cache: false,
            async: true,
            success: function (result) {
                $('#Content').html(result);
            }
        });
        //closeNav();
    }
</script>

<script>
function ShowPanel(divName) {
    alert(divName);
    document.getElementById("Content").innerHTML = "";
    document.getElementById("search").style.display = "none";
    document.getElementById("add").style.display = "none";
    document.getElementById(divName).style.display = "block";  
    closeNav();
}
</script>

<script>
    function LoadInfluences() {
        var reader = new FileReader();
        var selectedFile = document.getElementById("fileLoader").files[0];
        reader.onload = function () {
            var comma = this.result.indexOf(',');
            var base64 = this.result.substr(comma + 1);   
            $.ajax({
                url: '@Url.Action("AddInfluencesFromFile", "Patient")',
                contentType: "application/json; charset=uft-8",
                data: JSON.stringify(base64),
                type: 'POST',
                async: true,
                dataType: "json",
                success: function (data) {
                    console.log('success');
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        };
        reader.readAsDataURL(selectedFile);
    }

    function GetAgingDynamics() {
        var startTime = document.getElementById("dtCommon1").value;
        var endTime = document.getElementById("dtCommon2").value;
        $.ajax({
            url: '@Url.Action("GetAgingDynamics", "Patient")',
            data: { startTimestamp: startTime, endTimestamp: endTime },
            type: 'get',
            cache: false,
            async: true,
            success: function (result) {
                $('#Content').html(result);
            }
        });
    }
</script>
<script>
function openNav() {
  document.getElementById("mySidenav").style.width = "250px";
}

function closeNav() {
  document.getElementById("mySidenav").style.width = "0";
}
</script>