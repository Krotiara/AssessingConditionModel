@{
    Layout = "~/Views/Shared/_MedicLayout.cshtml";
}

<html>
    <head>  
    <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

        <style>
        .b1 {
            background: none;
            border: none;
            padding: 0;
            text-decoration: none;
            cursor: pointer;
            margin: auto;
        }
        .dropdown-menu {
            text-align: center;
            min-width:200px;
        }
        </style>

        <title>Персональная страница врача</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom box-shadow">
            <a class="navbar-brand" href="#">Меню</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link active dropdown-toggle" href="#"
                           id="navbarDropdown" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">Данные</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <button class="b1" onclick="GetPanel('search')">Пациенты</button>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link active dropdown-toggle" href="#" 
                        id="navbarDropdown" role="button" data-toggle="dropdown" 
                        aria-haspopup="true" aria-expanded="false">Статистика</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <button class="b1" onclick="GetPanel('commonBioAgeDynamic')">Общая динамика биовозраста</button>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link active dropdown-toggle" href="#"
                           id="navbarDropdown" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">Внести данные</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <button class="b1" onclick="GetPanel('addFile')">Загрузить из файла</button>
                            <button class="b1" onclick="GetPanel('addPatient')">Добавить пациента</button>
                            <button class="b1" onclick="GetPanel('addInfluence')">Добавить воздействие</button>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        <div id="Content"></div>
        @*@await Component.InvokeAsync("Notyf")*@
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        @await Component.InvokeAsync("NToastNotify")
    </body>
</html>

<script>
    function GetPanel(panelName) {
        $.ajax({
            url: '@Url.Action("GetPartialViewByTag", "ViewGetter")',
            data: { tag: panelName },
            type: 'get',
            cache: false,
            async: true,
            success: function (result) {
                $('#Content').html(result);
            }
        });
    }
</script>
