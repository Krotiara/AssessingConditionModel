        <style>
            .sidenav {
                  height: 100%;
                  width: 100%;
                  position: fixed;
                  z-index: 1;
                  top: 0;
                  left: 0;
                  background-color: #0288d1;
                  overflow-x: hidden;
                  transition: 0.5s;
                  padding-top: 60px;
                  text-align:center;
            }
            .sidenav a {
                text-decoration: none;
                font-size: 25px;
                color: #f1f1f1;
                display: block;
                transition: 0.3s;
                padding: 30px;
            }
            .sidenav a:hover {
                color: #f1f1f1;
            }
        </style>
    </head>
    <body>
        <form>
            <div id="mySidenav" class="sidenav"> 
